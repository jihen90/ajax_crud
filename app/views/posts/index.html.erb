<h1 class= py-5>Posts</h1>

<div class ='pb-5'>
  <%= form_tag(posts_path, method: "get", remote: true, class: 'form-inline') do %>
    <%= text_field_tag :search, params[:search], class: 'form-control mr-1' %>
    <%= submit_tag "Buscar", class: 'btn btn-outline-secondary' %>
  <% end %>
</div>

<div id="form"></div>
<div id="showPost"></div>

<div id="blogpost-table">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>
    <tbody id='posts'>
      <% @posts.each do |p| %>
          <tr id="post-<%= p.id %>">
              <td><%= p.id %></td>
              <td><%= p.title %></td>
              <td><%= p.content %></td>
              <td><%= link_to 'Ver', p, remote: true, class:'btn btn-outline-primary' %></td>
              <td><%= link_to 'Editar', edit_post_path(p), remote: true, class: 'btn btn-outline-primary' %></td>
              <td><%= link_to 'Eliminar', p, method: :delete, remote: true, class: 'btn btn-outline-danger', data: {confirm: "seguro que los quieres borrar?"} %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id ="search-results"> </div>


<div id='buttom' class='py-3'>
    <%= link_to 'Nuevo post', new_post_path, remote: true, class: 'btn btn-primary' %>
</div>