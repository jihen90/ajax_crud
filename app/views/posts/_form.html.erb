<%= form_with(model: @post, remote: true) do |form| %>


    <div class='form-group'>
        <%= form.label :title %>
        <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class='form-group'>
        <%= form.label :content %>
        <%= form.text_field :content, class:'form-control' %>
    </div>

    <div class='py-5'>
        <%= form.submit class:'btn btn-primary' %>
    </div>

<% end %>
